<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdc3c7"
    tools:context="com.example.botir.impoor.MainActivity">

    <TextView
        android:id="@+id/text_i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85sp"
        android:layout_marginTop="50sp"
        android:fontFamily="sans-serif"
        android:text="@string/iam"
        android:textColor="#34495e"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/text_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195sp"
        android:layout_marginTop="50sp"
        android:fontFamily="sans-serif"
        android:text="@string/poor"
        android:textColor="#34495e"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_coal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        app:srcCompat="@drawable/coal" />

</RelativeLayout>
